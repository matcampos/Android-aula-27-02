<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">]
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/configura_es"
        android:onClick="openConfiguration"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/portuguesa"
            android:layout_width="99dp"
            android:layout_height="75dp"
            android:src="@drawable/portuguesa" />

        <TextView
            android:id="@+id/nomePt"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView4"
            android:text="@string/pizza_portuguesa"></TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomePt"
            android:layout_marginStart="47dp"
            android:layout_toEndOf="@+id/portuguesa"
            android:text="@string/valor_r_45_o0"></TextView>

        <Button
            android:layout_width="116dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="abrirFragment1"
            android:text="@string/mais_informa_es"
            android:textSize="8sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/palmito"
            android:layout_width="99dp"
            android:layout_height="75dp"
            android:src="@drawable/palmito" />

        <TextView
            android:id="@+id/nomePa"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView2"
            android:text="@string/pizza_palmito"></TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/palmito"
            android:text="@string/r_40_00"></TextView>

        <Button
            android:id="@+id/button"
            android:layout_width="116dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/nomePa"
            android:onClick="abrirFragment2"
            android:text="@string/mais_informa_es"
            android:textSize="8sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/calabresa"
            android:layout_width="99dp"
            android:layout_height="75dp"
            android:src="@drawable/calabresa" />

        <TextView
            android:id="@+id/nomeCl"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView3"
            android:text="@string/pizza_calabresa"></TextView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomeCl"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/calabresa"
            android:text="@string/valor_r_43_00"></TextView>

        <Button
            android:layout_width="116dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="abrirFragment3"
            android:text="@string/mais_informa_es"
            android:textSize="8sp" />

    </RelativeLayout>
</LinearLayout>